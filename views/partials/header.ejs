<header class="row back-im">
    <div class="container; movie-pic">

	<div class="container-fluid" style="margin-bottom:10px">
	    <div class="row">
		    <div class="col-md-3">
                <a href="/" >
			        <img alt="logo" src="/assets/resources/img/logo.jpg" width="120" style="margin-left:150px"/>
                </a>
		    </div>

		    <div class="col-md-6" style="padding-left:50px; padding-right:50px">

		    	<div class="input-group" style="margin-top:45px">
                    <form role="form-inline" action="/search" method="POST">
                        <div class="form-group">
                            <div class="col-md-11">
                                <label><input type="text" class="form-control" name="keyword" id="search" placeholder="Search for..." size="40"></label>
                            </div>
                            <div class="col-md-1" style="margin-left:-25px;">
                                <button class="btn btn-default" type="submit">
